#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

const int MOD_PRIME = 1e9 + 7;


int main() {
ios::sync_with_stdio(false);
cin.tie(nullptr);
 

int t;
cin >> t;

while (t--){
    int n;
    cin >> n;
	vector<long long> a(n);
	long long mx = 0;
	for(int i = 0; i < n; i++){
		cin >> a[i];
		mx = max(mx, a[i]);
		
	}
	long long sum = 0;
	for(int i = 0; i < n; i++) {
	    int j = (i + 1) % n;
	     sum += max(a[i], a[j]);
	}
	long long ans = sum -= mx;
	
	cout << ans << "\n";
}
	return 0;
}
